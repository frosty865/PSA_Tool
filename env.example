# Flask Configuration
FLASK_ENV=production
FLASK_PORT=8080

# Supabase Configuration
SUPABASE_URL=https://xyz.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://xyz.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Ollama Configuration (managed by NSSM service - do not start from Flask)
OLLAMA_HOST=http://127.0.0.1:11434

# Tunnel Configuration (managed by NSSM service - Cloudflare tunnel)
TUNNEL_URL=https://flask.frostech.site

# Next.js Frontend (for Flask to know where frontend is)
# Development: use localhost
# Production: use tunnel URL (or set NODE_ENV=production for auto-detection)
NEXT_PUBLIC_FLASK_URL=http://localhost:8080
# NEXT_PUBLIC_FLASK_URL=https://flask.frostech.site  # Uncomment for production

# Authentication Configuration (Optional)
# Comma-separated list of admin emails (e.g., admin@example.com,superadmin@example.com)
ADMIN_EMAILS=
# Cookie domain for authentication (optional, auto-detected for zophielgroup.com)
AUTH_COOKIE_DOMAIN=
# Site URL for absolute URLs (optional, defaults to current origin)
NEXT_PUBLIC_SITE_URL=
# Inactivity timeout in minutes (default: 30 minutes)
NEXT_PUBLIC_INACTIVITY_TIMEOUT=30

